<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="ring"
            android:thickness="1dp"
            android:useLevel="false">
            <solid android:color="#fff" />
        </shape>
    </item>

    <item
        android:width="40dp"
        android:height="40dp"
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp">
        <shape
            android:shape="oval"
            android:thickness="10dp"
            android:useLevel="false">
            <solid android:color="#fff" />
        </shape>
    </item>

    <item
        android:width="12dp"
        android:height="12dp"
        android:bottom="20dp"
        android:left="34dp"
        android:right="20dp"
        android:top="34dp">
        <shape
            android:shape="oval"
            android:thickness="10dp"
            android:useLevel="false">
            <solid android:color="#FF0000" />
        </shape>
    </item>


</layer-list>